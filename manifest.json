{

  "description": "Show and remove expired bookmarks",
  "manifest_version": 2,
  "name": "404 Bookmarks",
  "version": "1.7",

  "icons": {
    "48": "icon.svg"
  },

  "permissions": [
    "bookmarks", "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "404 Bookmarks",
    "default_icon": "icon.svg"
  },
  
  "applications": {
    "gecko": {
      "id": "{5f8d31ba-47fb-4b70-bf8d-d2113f6da22f}"
    }
  }
}
